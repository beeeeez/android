<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="200px">
        <TextView
                android:text="First Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/fbox"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Last Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/lbox"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView4"/>
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/typebox" android:spinnerMode="dropdown"
                android:entries="@array/Milk"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Number of Bars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView5"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/numbox"
                android:imeOptions="actionDone"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="15px">
        <TextView
                android:text="Shipping Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView6"/>
    </TableRow>
    <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="horizontal">
        <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/shipbox">
            <RadioButton
                    android:text="Normal Shipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/nRadio" android:layout_weight="1"/>
            <RadioButton
                    android:text="Expedited"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/eRadio" android:layout_weight="1"/>
        </RadioGroup>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="Save"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:id="@+id/saveButton"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/ans"/>
    </TableRow>
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/idBox"/>
        <Button
                android:text="Get Order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/orderBtn"/>
    </TableRow>
</TableLayout>